# Environment
NODE_ENV=production

# Database Configuration (Required)
# Use full DATABASE_URL for Vercel deployment with external providers like Supabase, Neon, etc.
DATABASE_URL=postgresql://username:password@hostname:5432/zentro_homes

# Alternative: Individual database connection parameters
DB_HOST=your_database_host
DB_PORT=5432
DB_NAME=zentro_homes
DB_USER=your_username
DB_PASSWORD=your_password

# Supabase Authentication (Required for Admin Functions)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# File Upload Configuration (Optional)
MAX_FILE_SIZE=10485760  # 10MB in bytes for Vercel
MAX_FILES_PER_UPLOAD=10

# CORS Configuration (Vercel automatically handles CORS, but these can be used for additional restrictions)
ALLOWED_ORIGINS=https://yourdomain.vercel.app,https://your-custom-domain.com